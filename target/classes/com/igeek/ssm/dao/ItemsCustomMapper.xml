<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.igeek.ssm.dao.ItemsCustomMapper">

    <!-- 需求：根据商品名称进行模糊查询 -->
    <select id="findItemsByLikeName" parameterType="ItemsQueryVO" resultType="ItemsCustom">
        select * from items where name like concat('%',#{itemsCustom.name},'%')
    </select>

</mapper>